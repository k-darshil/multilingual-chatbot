# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Translation Configuration (Optional)
# Option 1: Service Account File Path (Recommended)
GOOGLE_PROJECT_ID=your-google-cloud-project-id
GOOGLE_TRANSLATE_API_KEY=/path/to/your/service-account-key.json

# Option 2: Service Account JSON Content (Alternative)
# GOOGLE_PROJECT_ID=your-google-cloud-project-id
# GOOGLE_TRANSLATE_API_KEY='{"type": "service_account", "project_id": "...", "private_key": "...", ...}'

# IBM DocLing API (Optional)
IBM_DOCLING_API_KEY=your_ibm_docling_api_key_here

# Neo4j Configuration (Optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Hugging Face API Key (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# App Configuration
APP_DEBUG=False
MAX_FILE_SIZE_MB=50

# Gradio Configuration (Optional)
# Set to "true" to create a public shareable link (useful for remote access)
GRADIO_SHARE=true