# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Translation Configuration (Optional)
GOOGLE_PROJECT_ID=your-google-cloud-project-id
GOOGLE_TRANSLATE_API_KEY=/path/to/your/service-account-key.json

# App Configuration
APP_DEBUG=False
MAX_FILE_SIZE_MB=50

# Gradio Configuration (Optional)
# Set to "true" to create a public shareable link (useful for remote access)
GRADIO_SHARE=true